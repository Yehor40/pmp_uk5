<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <com.example.uk5_2.CustomGraphView
        android:id="@+id/graphView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/series1EditText"
        android:layout_width="380dp"
        android:layout_height="62dp"
        android:hint="Series 1 values (comma-separated)" />

    <EditText
        android:id="@+id/series2EditText"
        android:layout_width="380dp"
        android:layout_height="63dp"
        android:hint="Series 2 values (comma-separated)" />

    <Button
        android:id="@+id/addValuesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add Values" />

</LinearLayout>

